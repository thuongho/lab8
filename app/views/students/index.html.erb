<h1>Listing students</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.course %></td>
    <td><% student.urls.each do |u| %>
          <a href="<%= u.url %>"><%= u.url %></a>
        <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Student', new_student_path %>
